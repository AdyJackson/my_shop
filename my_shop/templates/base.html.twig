<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="/css/main.css">
        <script src="https://kit.fontawesome.com/eea1460f9c.js"></script>        <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:900&display=swap" rel="stylesheet">
        <title>{% block title %}my_Shop{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="header">
            {% block header %}
                <div class="headerPos">
                    <span class="headerContent"><a href="/shop">my_Shop</a></span>
                </div>
            {% endblock %}
        </div>

        <div class="navigation">
            {% block navigation %}
                <div class="navigationContent">
                    <a href="/basket"><i class="fas fa-shopping-cart"></i></a>
                </div>

            {% endblock %}
        </div>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
